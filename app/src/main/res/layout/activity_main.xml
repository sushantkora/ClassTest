<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kora1101.classtest.MainActivity"
    android:background="@drawable/img">

    <TextView
        android:id="@+id/x_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="27dp"
        android:text="Accelerometer_X"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/y_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/x_id"
        android:layout_alignStart="@+id/x_id"
        android:layout_below="@+id/x_id"
        android:layout_marginTop="12dp"
        android:text="Accelerometer_Y"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/z_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/y_id"
        android:layout_alignStart="@+id/y_id"
        android:layout_below="@+id/y_id"
        android:layout_marginTop="15dp"
        android:text="Accelerometer_Z"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/magnetic_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/z_id"
        android:layout_alignStart="@+id/z_id"
        android:layout_below="@+id/z_id"
        android:layout_marginTop="62dp"
        android:text="magnetic_X"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/magnetic_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/magnetic_x"
        android:layout_alignRight="@+id/magnetic_x"
        android:layout_below="@+id/magnetic_x"
        android:layout_marginTop="21dp"
        android:text="Magnetic_Y"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/magnetic_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/magnetic_y"
        android:layout_alignStart="@+id/magnetic_y"
        android:layout_centerVertical="true"
        android:text="Magnetic_Z"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gyro_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Gyro_X"
        android:textStyle="bold"
        android:layout_below="@+id/magnetic_z"
        android:layout_alignLeft="@+id/magnetic_z"
        android:layout_alignStart="@+id/magnetic_z" />

    <TextView
        android:id="@+id/gyro_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gyro_Y"
        android:textStyle="bold"
        android:layout_below="@+id/gyro_x"
        android:layout_alignLeft="@+id/gyro_x"
        android:layout_alignStart="@+id/gyro_x" />

    <TextView
        android:id="@+id/gyro_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Gyro_Z"
        android:textStyle="bold"
        android:layout_below="@+id/gyro_y"
        android:layout_alignRight="@+id/gyro_y"
        android:layout_alignEnd="@+id/gyro_y" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/magnetic_y"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="Button" />

    <TextView
        android:id="@+id/light_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gyro_z"
        android:layout_alignStart="@+id/gyro_z"
        android:layout_below="@+id/gyro_z"
        android:layout_marginTop="34dp"
        android:text="Light_X" />

    <TextView
        android:id="@+id/light_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/light_x"
        android:layout_alignStart="@+id/light_x"
        android:layout_below="@+id/light_x"
        android:layout_marginTop="15dp"
        android:text="Light_Y" />

    <TextView
        android:id="@+id/light_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/light_y"
        android:layout_alignStart="@+id/light_y"
        android:layout_below="@+id/light_y"
        android:layout_marginTop="15dp"
        android:text="Light_Z" />


</RelativeLayout>

